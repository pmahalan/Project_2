
  <div class="row"></div>
  <div class="container">
  <!-- Header -->

    <div class="section row">
      <h5>Add a New Event</h5>
      <div class="divider row"></div>
    </div>

    <!-- New Event Field -->
    <div class="row">
      <form class="col s12" id="eventForm">
        <div class="row">
          <!-- Event Name -->
          <div class="input-field col m6 s12">
            <i class="material-icons prefix">event</i>
            <input id="title" type="text" class="validate">
            <label for="title">Event Name</label>
          </div>
          <!-- Date Picker date_event -->
          <div class="input-field col m6 s12">
            <i class="material-icons prefix">date_range</i>
            <input id="date" type="text" class="datepicker">
            <label for="date_event">Event Date</label>
          </div>
        </div>
        <!-- Location of Event -->
        <div class="row">
          <div class="input-field col m6 s12">
            <i class="material-icons prefix">add_location</i>
            <input id="location" type="text" class="validate">
            <label for="location">Location</label>
          </div>
        <!-- Keyword -->
          <div class="input-field col m6 s12">
            <i class="material-icons prefix">sms</i>
            <input placeholder="Texting keyword for event" id="keyword" type="text" class="validate">
            <label for="keyword">Keyword</label>
          </div>
        </div>
        <!-- Event Host -->
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">wc</i>
            <input id="host" type="text" class="validate">
            <label for="host">Host</label>
          </div>
        </div>
        <!-- Submit button for new event -->
        <button id="newEvent" class="btn waves-effect waves-light row right" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </form>
      <div class="offset row"></div>
      <div class="offset row"></div>
    </div>
  </div>
